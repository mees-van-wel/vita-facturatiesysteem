// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  name            String
  email           String    @unique
  password        String
  role            String
  createdExpenses Expense[] @relation("CreatedExpenses")
  handledExpenses Expense[] @relation("HandledExpenses")
}

model Company {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  name      String
  expenses  Expense[]
}

model State {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  expense   Expense  @relation(fields: [expenseId], references: [id])
  expenseId Int
  type      String
  notes     String?
}

model Expense {
  id                     Int       @id @default(autoincrement())
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @default(now()) @updatedAt
  completedAt            DateTime?
  states                 State[]
  createdBy              User      @relation("CreatedExpenses", fields: [createdById], references: [id])
  createdById            Int
  handler                User      @relation("HandledExpenses", fields: [handlerId], references: [id])
  handlerId              Int
  customerName           String
  invoiceAddress         String
  postalCode             String
  city                   String
  passingDate            DateTime
  notaryName             String
  company                Company   @relation(fields: [companyId], references: [id])
  companyId              Int
  objectAddress          String
  objectPostalCode       String
  objectCity             String
  mortgageInvoiceAmount  Decimal
  insuranceInvoiceAmount Decimal
  otherInvoiceAmount     Decimal
  signedOTDV             String
  zzpInvoice             String?
  paymentMethod          String
  spreadPaymentAgreement String?
  notes                  String?
  IBDeclaration          String
}
